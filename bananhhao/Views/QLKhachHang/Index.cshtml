
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using bananhhao.Models;
@model List<khachhang>
  
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý khách hàng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách khách hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body ">
                <table id="khachhang" width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Mã Khách Hàng</th>
                            <th>Tên Khách hàng</th>
                            <th>Địa Chỉ</th>
                            <th>Điện Thoại</th>
                            <th>CMND</th>
                            
                            <th>
                                <a href="#">Xóa</a> -
                                <a href="suakhachhang.html">Sửa</a>
                            </th>
                        </tr>
                        @foreach (khachhang kh in Model)
                        {
                            <tr>
                                <td class="tdNumber">@kh.makh</td>
                                <td class="tdCharacter">@kh.tenkh</td>
                                <td class="tdCharacter">@kh.diachi</td>
                                <td class="tdNumber">@kh.dt</td>
                                <td class="tdNumber">@kh.cmnd</td>
                                <td><a href="@Url.Action("Delete",new {makh = kh.makh })" class="btn btn-danger">Xoá</a><a href="@Url.Action("Edit",new {id = kh.makh })" class="btn btn-warning">Sửa</a></td>
                            </tr>
                        }
                    </thead>
                    <tbody></tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

