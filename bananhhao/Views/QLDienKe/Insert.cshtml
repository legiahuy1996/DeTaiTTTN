@model bananhhao.Models.dienke

@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{

   
    <script src="~/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#ngaysx").datepicker();
            $("#ngaylap").datepicker();
        });
    </script>
}
<h2>Thêm điện kế</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <h4>Thông tin điện kế</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <label for="email">Mã Điện Kế:</label>
    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.madk, new { htmlAttributes = new { @class = "form-control" ,@minlength = "8", @required="required" } })
            @Html.ValidationMessageFor(model => model.madk, "", new { @class = "text-danger" })
        </div>
    </div>
    <label for="email">Mã khách hàng:</label>
    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.makh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.makh, "", new { @class = "text-danger" })
        </div>
    </div>
    <label for="email">Ngày sản xuất:</label>
    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.ngaysx, new { htmlAttributes = new { @class = "form-control", @id = "ngaysx" } })
            @Html.ValidationMessageFor(model => model.ngaysx, "", new { @class = "text-danger" })
        </div>
    </div>
    <label for="email">Ngày lập:</label>
    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.ngaylap, new { htmlAttributes = new { @class = "form-control", @id = "ngaylap" } })
            @Html.ValidationMessageFor(model => model.ngaylap, "", new { @class = "text-danger" })
        </div>
    </div>
    <label for="email">Mô tả:</label>
    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.mota, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.mota, "", new { @class = "text-danger" })
        </div>
    </div>
    <label for="email">Trạng thái:</label>
    <div class="form-group">

        <div class="col-md-10">
            @Html.DropDownListFor(model => model.trangthai, new List<SelectListItem>
{
new SelectListItem {Text = "Còn sử dụng", Value = "True"},
new SelectListItem {Text = "Không còn sử dụng", Value = "False"},

}, "--- Select ---", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
