

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using bananhhao.Models
@model List<giadien>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý giá điện</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Bảng giá điện
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body ">
                <table id="khachhang" width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Mã bậc</th>
                            <th>Tên bậc</th>
                            <th>Từ số (KW)</th>
                            <th>Đến số (KW)</th>
                            <th>Đơn giá</th>
                            <th>Ngày áp dụng</th>
                            <th>
                               
                                <a href="">Sửa</a>
                            </th>
                        </tr>
                        @foreach (giadien gd in Model)
                        {
                            <tr>
                                <td class="tdNumber">@gd.mabac</td>
                                <td class="tdCharacter">@gd.tenbac</td>
                                <td class="tdNumber">@gd.tusokw</td>
                                <td class="tdNumber">@gd.densokw</td>
                                <td class="tdNumber">@gd.dongia</td>
                               @if (gd.ngayapdung != null)
                               {
                                   <td class="tdNumber">@gd.ngayapdung.Value.ToString(string.Format("dd/MM/yyyy"))</td>
                               }
                               else
                               {
                                   <td></td>
                               }
                              <td> <a href="@Url.Action("Edit",new {id = gd.mabac })"class="btn btn-warning">Sửa</a></td>
                            </tr>
                        }
                    </thead>
                    <tbody></tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

